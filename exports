# Default editor
export EDITOR=vim

# Ignore duplicated commands when appending to history
export HISTCONTROL=ignoreboth

# Increase (in memory) history size
export HISTSIZE=4096

# Increase (on disk) history size
export HISTFILESIZE=8192

# Language and encoding
export LANG=en_AU.UTF-8
export LC_ALL=en_AU.UTF-8

# Highlight section titles in man pages
export LESS_TERMCAP_md=$'\e[32m'

# Don't clear the screen after exiting a manpage
export MANPAGER='less -X'

# Always show file extraction command
export SHOW_FULL_COMMAND='true'

# Enable grep colours
export GREP_OPTIONS='--color=auto'

# vim: ft=sh ts=4 et sw=4:

